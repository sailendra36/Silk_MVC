@model Category

<form method="post">
    @* <input asp-for="Id" hidden />  -- rightnow not required becoz Primary field is Id which is by default taken by entity framework but if something like CategoryId
                                            then hidden field is required - else it will keep exsiting record and instead of editing it will add new one*@
    <div class="border p-3 mt-0-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        @* <div asp-validation-summary="ModelOnly"></div> -- will only display model related error but not property related errors*@
        <div class="mb-3 row p-1">
            <label asp-for="Name" class=""></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <label asp-for="DisplayOrder" class=""></label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Update</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control">Back To List</a>
            </div>
        </div>
        @* <partial name="_ValidationScriptsPartial" /> -- if partial is not script related,can be added here in master page like this *@
    </div>

</form>

@section Scripts {
    @{
        //client side validation using js scripts from shared folder
        <partial name="_ValidationScriptsPartial" />
    }
}