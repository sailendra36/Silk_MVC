@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary">Edit Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            @* <input asp-for="Id" hidden />  -- rightnow not required becoz Primary field is Id which is by default taken by entity framework but if something like CategoryId
            then hidden field is required - else it will keep exsiting record and instead of editing it will add new one*@
            <input asp-for="Id" hidden />
            <div class="border p-3 mt-0-4">
                <div asp-validation-summary="All"></div>
                @* <div asp-validation-summary="ModelOnly"></div> -- will only display model related error but not property related errors*@
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" class="form-control shadow border-0"></input>
                    <label asp-for="Name" class="ms-2"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="DisplayOrder" class="form-control shadow border-0"></input>
                    <label asp-for="DisplayOrder" class="ms-2"></label>
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>
                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Update</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary border form-control">Back To List</a>
                    </div>
                </div>
                @* <partial name="_ValidationScriptsPartial" /> -- if partial is not script related,can be added here in master page like this *@
            </div>

        </form>

    </div>
</div>


@section Scripts {
    @{
        //client side validation using js scripts from shared folder
        <partial name="_ValidationScriptsPartial" />
    }
}